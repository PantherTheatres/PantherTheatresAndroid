<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="139dp"
        android:layout_height="107dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:contentDescription="@string/pantherLogo1"
        app:srcCompat="@drawable/pantherlogo1" />

    <TextView
        android:id="@+id/pantherText"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="50dp"
        android:textColor="#FFFFFF"
        android:text="@string/pantherText"
        tools:text="PANTHER" />

    <TextView
        android:id="@+id/theatresText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pantherText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="59dp"
        android:textColor="#FFFFFF"
        android:text="@string/theatresText"
        tools:text="THEATRES" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:typeface="serif"
        tools:text="Something More In Movies" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="277dp"
        android:layout_height="63dp"
        android:layout_alignEnd="@+id/pantherText"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-200dp"
        android:layout_marginBottom="195dp"
        android:text="TextView"
        tools:text="Sign up for our FREE Rewards program to receive premium perks. Our membership includes $5 Ticket Tuesdays.  " />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:text="Button"
        tools:text="Join Now" />

</RelativeLayout>

